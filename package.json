{
  "name": "breadcrumb",
  "private": true,
  "workspaces": [
    "packages/*",
    "services/*",
    "apps/*",
    "examples"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "docker compose -f infra/docker-compose.yml up -d && turbo run dev --filter=@breadcrumb/server --filter=@breadcrumb/web",
    "dev:packages": "turbo run dev --filter=./packages/*",
    "db:up": "docker compose -f infra/docker-compose.yml up -d",
    "db:down": "docker compose -f infra/docker-compose.yml down",
    "db:reset": "docker compose -f infra/docker-compose.yml down -v && docker compose -f infra/docker-compose.yml up -d",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean"
  },
  "devDependencies": {
    "turbo": "^2",
    "typescript": "^5.7"
  },
  "packageManager": "npm@10.0.0",
  "engines": {
    "node": ">=20"
  }
}
